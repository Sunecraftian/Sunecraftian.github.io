---
interface Props {
  title: string;
  href: string;
  description?: string;
  meta?: string;
}
const { title, href, description = "", meta = "" } = Astro.props;
---

<a href={href} class="block card p-5 no-underline">
  <div class="flex items-start justify-between gap-4">
    <h3 class="text-lg font-semibold leading-tight">{title}</h3>
    {meta && <span class="text-xs text-[rgb(var(--muted))]">{meta}</span>}
  </div>
  {
    description && (
      <p class="mt-2 text-[15px] text-[rgb(var(--muted))]">{description}</p>
    )
  }
</a>
