---
const links = [
  { href: "/", label: "Home" },
  { href: "/projects/", label: "Projects" },
  // { href: "/blog/", label: "Blog" },
];
---

<header class="container py-8">
  <div class="flex items-center justify-between">
    <a href="/" class="font-extrabold tracking-tight text-2xl no-underline"
      >Sunecraftian</a
    >
    <nav class="flex gap-6 text-sm">
      {
        links.map((l) => (
          <a
            href={l.href}
            class="text-[rgb(var(--muted))] hover:text-[rgb(var(--fg))] no-underline"
          >
            {l.label}
          </a>
        ))
      }
    </nav>
  </div>
</header>
